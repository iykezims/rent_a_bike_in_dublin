<!DOCTYPE html>
<html>
  <head class="header">

    <title><%= yield(:title) %> | Rent A Bike In Dublin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    

    <h1>RENT A BIKE IN DUBLIN</h1>
      
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Products", items_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "View Cart", "/cart" %></li>

        <% if user_signed_in? %>
            <li><a href="#">Hi <%= current_user.email %></a></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
        <% else %>
            <li><%= link_to 'Register', new_user_registration_path %></li> 

          <% if user_signed_in? %>
                  
                 <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                 <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
          <% else %>
                 <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% end %>

        <% end %>
         <% if user_signed_in? %>
        
         <li><%= link_to "Admin", rails_admin_path %></li>
          
         <% end %>

        <% if user_signed_in? %>
          <li><%= link_to "Category", categories_path %></li>
        <% end %>  
      </ul>

      



  </head>

     <%=render 'layouts/search'%>


  <body>
    <div class="container">
     <%= yield %>
    </div>

    
  </body>
</html>
